<?xml version="1.0" encoding="utf-8"?>
<mx:Application
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:toolbox="http://www.flextoolbox.com/2006/mxml"
	layout="horizontal">

	<mx:VBox width="200">
		<mx:Label color="0xffffff" fontSize="16" text="Layout Strategy"/>
		<mx:RadioButtonGroup id="layoutStrategy" change="treeMap.layoutStrategy = new layoutStrategy.selectedValue();"/>
		<mx:RadioButton groupName="layoutStrategy" label="Squarify" value="{Squarify}" selected="true"/>
		<mx:RadioButton groupName="layoutStrategy" label="Slice-and-Dice" value="{SliceAndDice}"/>
	</mx:VBox>
	
	<toolbox:TreeMap id="treeMap" width="400" height="300"
		dataProvider="{marketData}" labelField="@name" weightField="@value"/>
	
